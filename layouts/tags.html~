        <li>
            <a href="<%= post.path %>"><%= post[:title]%></a>
            <span class="date"><%= attribute_to_time(post[:created_at]).strftime('%B %-d') %></span>
        </li>
    <% end %>
    </ol>
</section>
<% end %>
