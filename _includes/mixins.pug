mixin articleList(name, posts)
  h1.jc-heavy-title.display-2= name
  .jc-article-list
    h4 Recent articles
    ul.jc-post-list
      each post in posts.reverse()
        li.post-list-item
          h2
            a(href=post.url)= post.data.title
            small= post.date.toLocaleString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric', timeZone: 'UTC' })